<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#FFFFFF">
	<RelativeLayout android:layout_width="fill_parent"
		android:id="@+id/top" android:layout_height="wrap_content">
		<RelativeLayout android:layout_width="fill_parent"
			android:id="@+id/top_bar" android:layout_height="44dp"
			android:background="@drawable/backgr">
			<Button android:layout_width="wrap_content" android:text="@string/back"
				android:layout_height="32dp"
				android:paddingRight="10dp" android:id="@+id/back"
				android:background="@drawable/bluebtn" android:textColor="#FFFFFF" android:textStyle="bold" android:textSize="13sp"
				android:layout_alignParentLeft="true" android:layout_marginLeft="10dp"
				android:layout_centerVertical="true"></Button>
		</RelativeLayout>
	</RelativeLayout>
	<WebView android:layout_width="fill_parent"
		android:layout_above="@+id/bottom" android:layout_height="fill_parent"
		android:scrollbars="none" android:id="@+id/urlWeb"
		android:layout_below="@+id/top">
	</WebView>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/bottom"
		android:layout_alignParentBottom="true" android:orientation="vertical">
	</LinearLayout>
</RelativeLayout>
